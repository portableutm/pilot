<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ui.activities.OperationActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_white_24dp"
        android:background="@null"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:onClick="onClickSalir"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="56dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/white"
            android:layout_weight="0"
            android:orientation="vertical">
            <!-- ********************************************************************* -->
            <!-- ************************** Flight Comments ************************** -->
            <!-- ********************************************************************* -->
            <TextView
                android:id="@+id/textview_flight_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="@color/red"/>
            <!-- ********************************************************************* -->
            <!-- **************************** Description **************************** -->
            <!-- ********************************************************************* -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textview_description_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="@string/str_description"/>
                <TextView
                    android:id="@+id/textview_description_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
            <!-- ********************************************************************* -->
            <!-- ******************************* Start ******************************* -->
            <!-- ********************************************************************* -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textview_start_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="@string/str_start"/>
                <TextView
                    android:id="@+id/textview_start_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
            <!-- ********************************************************************* -->
            <!-- ******************************** End ******************************** -->
            <!-- ********************************************************************* -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textview_end_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="@string/str_end"/>
                <TextView
                    android:id="@+id/textview_end_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
            <!-- ********************************************************************* -->
            <!-- ************************* Maximum Altitude  ************************* -->
            <!-- ********************************************************************* -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textview_max_altitude_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="@string/str_maximum_altitude"/>
                <TextView
                    android:id="@+id/textview_max_altitude_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
            <!-- ********************************************************************* -->
            <!-- ******************************* Pilot ******************************* -->
            <!-- ********************************************************************* -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textview_pilot_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="@string/str_pilot"/>
                <TextView
                    android:id="@+id/textview_pilot_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
            <!-- ********************************************************************* -->
            <!-- ******************************* Drone ******************************* -->
            <!-- ********************************************************************* -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textview_drone_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="@string/str_drone"/>
                <TextView
                    android:id="@+id/textview_drone_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
        </LinearLayout>
        <!-- ********************************************************************* -->
        <!-- ******************************** Map ******************************** -->
        <!-- ********************************************************************* -->
        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"/>
    </LinearLayout>


</RelativeLayout>